                <buildArg>--no-fallback</buildArg>
                <buildArg>-H:ReflectionConfigurationFiles=/src/main/resources/reflect.json</buildArg>
              </buildArgs>
              <classpath>
                <param>/Users/siddharth/development/graalVm/target/demo-0.0.1-SNAPSHOT-shaded.jar</param>
              </classpath>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>3.3.0</version>
            <executions>
              <execution>
                <id>native-zip</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <descriptors>
                    <descriptor>src/assembly/native.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <descriptors>
                <descriptor>src/assembly/native.xml</descriptor>
              </descriptors>
            </configuration>
          </plugin>
